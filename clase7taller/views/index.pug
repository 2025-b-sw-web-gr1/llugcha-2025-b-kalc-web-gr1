// views/index.pug

doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= titulo

    style.
      /* Estilos mejorados para Cachorros */
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.7;
        margin: 0;
        padding: 0;
        background-color: #fcf8e3; /* Fondo más suave, color crema */
        color: #34495e;
      }
      .container {
        max-width: 900px;
        margin: 30px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        border-top: 8px solid #e74c3c; /* Borde superior rojo para llamar la atención */
      }
      h1 {
        color: #e74c3c; /* Rojo vibrante */
        text-align: center;
        margin-bottom: 10px;
      }
      h2 {
        color: #2980b9; /* Azul para subtítulos */
        border-bottom: 2px dashed #ccc;
        padding-bottom: 5px;
        margin-top: 25px;
      }
      .subtitulo {
        text-align: center;
        font-style: italic;
        color: #7f8c8d;
        margin-bottom: 30px;
      }
      ul {
        list-style-type: none;
        padding: 0;
      }
      li {
        background: #ecf0f1;
        margin-bottom: 10px;
        padding: 12px 15px;
        border-radius: 6px;
        border-left: 5px solid #f39c12; /* Naranja para puntos clave */
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .label {
        font-weight: bold;
        color: #2c3e50;
        flex-basis: 30%;
      }
      .detalle {
        flex-basis: 65%;
      }
      .consejo-box {
        margin-top: 30px;
        padding: 15px;
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
        border-radius: 5px;
        font-weight: bold;
        text-align: center;
      }

  body
    .container
      h1= titulo
      p.subtitulo= subtitulo

      h2 Datos de Etapa: #{etapa}

      h3 Cuidados Esenciales para tu #{raza}
      
      // Iterar sobre los cuidados
      ul
        each cuidado in cuidadosPrincipales
          li
            span.label #{cuidado.nombre}:
            span.detalle #{cuidado.detalle}

      .consejo-box
        p CONSEJO CLAVE: #{consejo}